module NetworkToGraph_All;
create OUT : Graph from IN : Network;

rule System2Root {
	from
		s : Network!System
	to
		r : Graph!Root (
			entities <- s.components->collect(c | thisModule.Component2Entity(c))
		)
}

rule Component2Entity {
	from
		c : Network!Component
	to
		e : Graph!Entity (
			name <- c.name
		)
}

rule Link2Link {
	from
		l : Network!Link
	to
		tl : Graph!Link (
			Entitys <- l.components->collect(c | thisModule.Component2Entity(c))
		)
}