transformation amaltheaToAscet

metamodels {
	amalthea: "http://vitruv.tools/methodologisttemplate/amalthea",
	ascet: "http://vitruv.tools/methodologisttemplate/ascet"
}

reactions {
	reaction TaskDeleted after delete amalthea::Task deletedAmaltheaTask {
		deleteTask(deletedAmaltheaTask)
	}
}

routines {
	routine deleteTask(amalthea::Task amaltheaTask) {
		val ascet::Task ascetTask = getCorrespondence(amaltheaTask)
		if (ascetTask != null) {
			remove(ascetTask)
			removeCorrespondence(amaltheaTask, ascetTask)
		}
	}
}