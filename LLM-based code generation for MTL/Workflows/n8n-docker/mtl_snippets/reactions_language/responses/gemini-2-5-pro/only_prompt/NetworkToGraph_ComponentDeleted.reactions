transformation networkToGraph for network, graph

import network from "http://vitruv.tools/methodologisttemplate/network"
import graph from "http://vitruv.tools/methodologisttemplate/graph"

reaction ComponentDeleted {
    triggers after delete network.Component deletedComponent
    effects {
        call deleteEntity(deletedComponent);
    }
}

routine deleteEntity(network.Component component) {
    val graph.Entity entity = getCorrespondence(graph.Entity, component);
    update {
        xtend "org.eclipse.emf.ecore.util.EcoreUtil.delete(#{entity});"
    }
    removeCorrespondence(component, entity);
}