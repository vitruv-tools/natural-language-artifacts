import "http://vitruv.tools/methodologisttemplate/amalthea" as amalthea using qualified names
import "http://vitruv.tools/methodologisttemplate/ascet" as ascet using qualified names
reactions: amaltheaToAscet
in reaction to changes in amalthea
execute actions in ascet
reaction TaskDeleted {
after element amalthea::Task deleted
call deleteTask(change.affectedEObject)
}
routine deleteTask(amalthea::Task aTask) {
match {
val ascetTask = retrieve ascet::Task corresponding to aTask
}
update {
if (ascetTask != null) {
org.eclipse.emf.ecore.util.EcoreUtil::delete(ascetTask)
removeCorrespondenceBetween(ascetTask, aTask)
}
}
}